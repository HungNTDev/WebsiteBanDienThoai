@using Microsoft.AspNetCore.Components.Web
@using Admin.Services
@inject IImageService imageService

<div class="sidebar-wrapper">
    <div class="sidebar-header">
        <a href="" class="logo-brand">
            <img src="@imageService.GetImageUrl("Shipper_CPS3.77d4065.png")" alt="Logo" />
        </a>
    </div>

    <div class="sidebar-menu">
        <nav class="nav-menu">
            <div class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <i class="fas fa-home"></i> <!-- Dashboard icon -->
                    <span>Dashboard</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="categories">
                    <i class="fas fa-layer-group"></i> <!-- Category icon -->
                    <span>Category</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="brands">
                    <i class="fas fa-briefcase"></i> <!-- Brand icon -->
                    <span>Brand</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="series">
                    <i class="fas fa-stream"></i> <!-- Series icon -->
                    <span>Series</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="variations">
                    <i class="fas fa-sliders-h"></i> <!-- Variation icon -->
                    <span>Variation</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="variation-options">
                    <i class="fas fa-list-ul"></i> <!-- Variation Option icon -->
                    <span>Variation Option</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="products">
                    <i class="fas fa-box"></i> <!-- Product icon -->
                    <span>Product</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="product-items">
                    <i class="fas fa-boxes"></i> <!-- Product Item icon -->
                    <span>Product Item</span>
                </NavLink>
            </div>
        </nav>

    </div>
</div>

<style>
    .sidebar-wrapper {
        height: 100vh;
        background-color: #C41E3A;
        color: white;
        width: 250px;
    }

    .sidebar-header {
        height: 140px;
        background-color: #B01B34;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .logo-brand img {
        height: 100px;
        width: auto;
        object-fit: contain;
    }

    .sidebar-menu {
        padding-top: 1rem;
    }

    .nav-section {
        padding: 1rem 1rem 0.5rem;
    }

    .nav-section-title {
        color: rgba(255,255,255,0.7);
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin: 0;
    }

    .nav-item {
        font-size: 0.9rem;
    }

    .nav-link {
        color: white;
        display: flex;
        align-items: center;
        padding: 0.8rem 1rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .nav-link i {
            margin-right: 0.8rem;
            width: 20px;
            text-align: center;
        }

        .nav-link:hover {
            background-color: rgba(255,255,255,0.1);
            color: white;
            text-decoration: none;
        }

        .nav-link.active {
            background-color: rgba(255,255,255,0.15);
            color: white;
        }
</style>

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
