@using Microsoft.AspNetCore.Components.Web
@using Admin.Services
@inject IImageService imageService

<div class="sidebar-wrapper">
    <div class="sidebar-header">
        <a href="" class="logo-brand">
            <img src="https://th.bing.com/th/id/OIP.pAuEV0Xa00NlKbRtueZK3wHaEo?w=244&h=180&c=7&r=0&o=5&pid=1.7" alt="Logo" />
        </a>
    </div>

    <div class="sidebar-menu">
        <nav class="nav-menu">
            <div class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <i class="fas fa-tachometer-alt"></i> <!-- Dashboard icon -->
                    <span>Dashboard</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="categories">
                    <i class="fas fa-folder-open"></i> <!-- Category icon -->
                    <span>Category</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="brands">
                    <i class="fas fa-tags"></i> <!-- Brand icon -->
                    <span>Brand</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="series">
                    <i class="fas fa-stream"></i> <!-- Series icon -->
                    <span>Series</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="variations">
                    <i class="fas fa-sliders-h"></i> <!-- Variation icon -->
                    <span>Variation</span>
                </NavLink>
            </div>

        </nav>
    </div>
</div>

<style>
    .sidebar-wrapper {
        height: 100vh;
        background-color: #C41E3A;
        color: white;
        width: 250px;
    }

    .sidebar-header {
        padding: 1rem;
        background-color: #B01B34;
        text-align: center;
    }

    .logo-brand img {
        max-width: 150px;
        height: auto;
    }

    .sidebar-menu {
        padding-top: 1rem;
    }

    .nav-section {
        padding: 1rem 1rem 0.5rem;
    }

    .nav-section-title {
        color: rgba(255,255,255,0.7);
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin: 0;
    }

    .nav-item {
        font-size: 0.9rem;
    }

    .nav-link {
        color: white;
        display: flex;
        align-items: center;
        padding: 0.8rem 1rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .nav-link i {
            margin-right: 0.8rem;
            width: 20px;
            text-align: center;
        }

        .nav-link:hover {
            background-color: rgba(255,255,255,0.1);
            color: white;
            text-decoration: none;
        }

        .nav-link.active {
            background-color: rgba(255,255,255,0.15);
            color: white;
        }
</style>

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
