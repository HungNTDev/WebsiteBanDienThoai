# ========================
# üöß STAGE 1: BUILD
# ========================
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy solution file v√† project file
COPY NET1061_Server/NET1061_Server.csproj NET1061_Server/
RUN dotnet restore NET1061_Server/NET1061.csproj

# Copy to√†n b·ªô project
COPY . .

# Publish app
RUN dotnet publish NET1061_Server/NET1061.csproj -c Release -o /app/publish

# =========================
# üöÄ STAGE 2: RUNTIME
# =========================
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app

# Copy published output t·ª´ stage build
COPY --from=build /app/publish .

# M·ªü c·ªïng (t√πy ch·ªçn)
EXPOSE 80

# Ch·∫°y ·ª©ng d·ª•ng
ENTRYPOINT ["dotnet", "NET1061_Server.dll"]
